<%- include("partials/header") %>

<div class="ui main text container inverted black segment ">
    <h1  class="ui header">Edit <%=blog.title%></h1>
    <form class="ui inverted form" action="/blog/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field ">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field ">
            <label>Image</label>
            <input type="text" name="blog[image] "value="<%=blog.image%>">
         </div>
         <div class="field ">
            <label>Blog Content</label>
             <textarea required name="blog[body]" id="" cols="30" rows="10" ><%=blog.body%></textarea>
            </div>
            <button class="ui inverted basic brown large button" type="sunbmit">Update</button>
    </form>
  </div>

<%- include("partials/footer") %>